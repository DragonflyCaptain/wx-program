.detail{
  width: 95%;
  height: 400rpx;
  background: rgb(60, 52, 53);
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.info{
  display: flex;
  flex-direction: row;
  flex: 3;
  /* background: orange; */
}
.btn{
  flex: 1;
  display: flex;
  /* background: pink; */
}
.btn button{
  width: 300rpx;
  height: 80rpx;
  margin-top: 10rpx;
  background: gray;
  color: white;
  line-height: 80rpx;
  font-weight: 100;
}
.left{
  flex: 2;
  /* background: red; */
}
.right{
  flex: 3;
  /* background: greenyellow; */
}
.detail image{
  width: 260rpx;
  height: 290rpx;
  /* margin-top: 12rpx; */
  margin-left: 13rpx;
}
.title{
  font-size: 40rpx;
  color: white;
}
.engTitle{
  font-size: 25rpx;
  color: #A7A7B2;
}
.genres{
  float: left;
  margin-right: 15rpx;
  margin-top: 15rpx;
}
.genresTwo{
  float: left;
  margin-right: 15rpx;
}
.movieTime{
  margin-top: 30rpx;
  clear: both;
  /* overflow: hidden; */
}
.content{
  width: 95%;
  height: 200rpx;
  /* background: red; */
  margin-left: 20rpx;
  overflow: auto;
}
.content text{
  font-size: 25rpx;
}
.people{
  width: 95%;
  height: 360rpx;
  /* background: pink; */
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.actor{
  flex: 1;
  /* background: cyan; */
}
.actor text{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.actor_item{
  flex: 4;
  /* background: green; */
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  align-items: center;
  /* justify-content: center; */
}
.oneActor{
  width: 220rpx;
  height: 250rpx;
  /* background: red; */
  margin-left: 20rpx;
}
.actor_item image{
  width: 200rpx;
  height: 200rpx;
  margin-left: 9rpx;
}
.oneActor view{
  font-size: 20rpx;
  text-align: center;
}
.photo{
  width: 95%;
  height: 360rpx;
  /* background: pink; */
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.oneActor_photo{
  width: 220rpx;
  height: 250rpx;
  margin-left: 20rpx;
}
.oneActor_photo image{
  width: 200rpx;
  height: 260rpx;
  margin-left: 9rpx;
}